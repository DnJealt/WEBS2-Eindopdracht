<?xml version="1.0" encoding="UTF-8"?>
<config>
    <nav_top>
    	<page_home>
    		<label>Bekijk website</label>
    		<route>default-index-index</route>
    	</page_home>
        <page_users>
            <label>Gebruikers</label>
            <uri>#</uri>
            <resource>user_admin_index</resource>
            <privilege>index</privilege>
            <pages>
                <page_user_admin_add>
                    <label>Voeg gebruiker toe</label>
                    <route>user-admin-index-add</route>
                    <resource>user_admin_index</resource>
                    <privilege>add</privilege>
                </page_user_admin_add>
                <page_user_admin_index>
                    <label>Beheer gebruikers</label>
                    <route>user-admin-index-index</route>
                    <resource>user_admin_index</resource>
                    <privilege>index</privilege>
                </page_user_admin_index>
                
                <page_permission_admin_role_add>
                	<label>Voeg groep toe</label>
                	<route>permission-admin-role-add</route>
                	<resource>permission_admin_role</resource>
                	<privilege>add</privilege>
                </page_permission_admin_role_add>
				<page_permission_admin_role_index>
                	<label>Beheer groepen</label>
                	<route>permission-admin-role-index</route>
                	<resource>permission_admin_role</resource>
                	<privilege>index</privilege>
                </page_permission_admin_role_index>
            </pages>
        </page_users>
        <page_setting>
        	<label>Instellingen</label>
        	<route>default-admin-setting-index</route>
        	<resource>default_admin_setting</resource>
        	<privilege>index</privilege>
        </page_setting>
        <page_logout>
        	<label>Uitloggen</label>
        	<route>user-auth-logout</route>
        	<resource>user_auth</resource>
        	<privilege>logout</privilege>
        </page_logout>
    </nav_top>
    
    <nav_side>
        <pages_wizard>
            <label>Wizard</label>
            <uri>#</uri>
            <active>false</active>
            <icon>magic</icon>
            <pages>
                <page_database_admin_index>
                    <label>Database</label>
                    <route>wizard-admin-database-index</route>
                    <resource>wizard-admin-database</resource>
                    <privilege>index</privilege>
                </page_database_admin_index>
            </pages>
        </pages_wizard>
    	<pages_style>
    		<label>Opmaak</label>
    		<uri>#</uri>
    		<active>false</active>
			<icon>paint-brush</icon>
    		<pages>
	    		<page_default_admin_index>
		   			<label>HTML-Blokken</label>
		   			<route>stylesheet-admin-html-index</route>
		   			<resource>stylesheet_admin_index</resource>
		   			<privilege>index</privilege>
		    	</page_default_admin_index>
		    	<page_default_admin_add>
		   			<label>HTML-Blok Toevoegen</label>
		   			<route>stylesheet-admin-html-add</route>
		   			<resource>stylesheet_admin_index</resource>
		   			<privilege>add</privilege>
		    	</page_default_admin_add>
		    	<page_default_admin_sync>
		   			<label>Stylesheet</label>
		   			<route>stylesheet-admin-style-index</route>
		   			<resource>stylesheet_admin_index</resource>
		   			<privilege>index</privilege>
		    	</page_default_admin_sync>
    		</pages>
    	</pages_style>
    	<pages_formulieren>
    		<label>Formulieren</label>
    		<uri>#</uri>
    		<active>false</active>
			<icon>list-alt</icon>
    		<pages>
    			<page_form>
		        	<label>Overzicht</label>
		        	<route>form-admin-index-index</route>
		        	<resource>default_admin_setting</resource>
		        	<privilege>index</privilege>
		        </page_form>
		        <page_form_add>
		        	<label>Toevoegen</label>
		        	<route>form-admin-index-add</route>
		        	<resource>default_admin_setting</resource>
		        	<privilege>add</privilege>
		        </page_form_add>
    		</pages>
    	</pages_formulieren>
    </nav_side>
</config>